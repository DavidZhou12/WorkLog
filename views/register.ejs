<!DOCTYPE HTML>
<html>
    <head lang="en">
        <% include templates/head.ejs %>
    </head>
    <body>
        <div class="page-wrapper">
            <% if(errors) { %>
                <div class="alert alert-danger alert-dismissible alert-fixed" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <% errors.forEach(function(error) { %>
                        <%= error.msg %><br>
                    <% }); %>
                </div>
            <% } %>
            <div class="container">
                <div class="page-header">
                    <h2><%= title %></h2>
                </div> <!-- /.page-header -->

                <!-- Register Panel -->
                <div class="row">
                    <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
                        <div class="jumbotron">
                            <form role="form" action="/register" method="POST">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" class="form-control" placeholder="John Doe" name="name">
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" class="form-control" placeholder="Enter email address here..." name="email">
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" class="form-control" placeholder="********" name="password1">
                                </div>
                                <div class="form-group">
                                    <label>Comfirm Password</label>
                                    <input type="password" class="form-control" placeholder="********" name="password2">
                                </div>
                                <button type="submit" class="btn btn-primary pull-right">Submit</button>
                            </form>
                        </div> <!-- /.jumbotron -->
                    </div> <!-- /.column control -->
                </div> <!-- /.row -->

                <!-- FOOTER -->
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <footer>
                        <p class="pull-right"><a href="#">Back to top</a></p>
                        <p>&copy; 2017 WorkLog, Inc. &middot; <a href="{{url_for('return_privacy')}}">Privacy</a> &middot; <a href="{{url_for('return_terms')}}">Terms</a></p>
                    </footer>
                </div> <!-- ./column control -->
            </div> <!-- /.container -->
        </div> <!-- /.page-wrapper -->

        <% include templates/scripts.ejs %>
    </body>
</html>